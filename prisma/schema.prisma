generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String
  meal     Meal[]

  @@map("users")
}

model Meal {
  id String @id @default(uuid())

  name        String
  description String?
  isCheatMeal Boolean  @map("is_cheat_meal")
  eatenAt     DateTime @map("eaten_at")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("meals")
}
